<body>

<% back_path = request.referer == request.original_url ? root_path : request.referer %>
<%= link_to '<', back_path, class: 'back-button' %>

<div class="topboxovrtrnsfr2"><h1>Enter Recipient's Details</h1></div>
<%= form_with url: overseas_transfer_create_recipient_path, method: :post do %>
  <%= label_tag :dummy_account_details, "RECIPIENT'S ACCOUNT DETAILS", class: 'newrep1' %>
  <%= text_field_tag :bank_name, '', placeholder: "Select recipient's bank", class: 'newrep2', onclick: "this.value=''" %>
  <%= text_field_tag :account_details, '', placeholder: "Enter account no.", class: 'newrep2', onclick: "this.value=''" %>

  <%= label_tag :dummy_full_name, "RECIPIENT'S DETAILS", class: 'newrep1' %>
  <div class="newrep2">
    <%= text_field_tag :full_name, '', placeholder: "Full Name", class: 'newrep2', onclick: "this.value=''" %>
    <p>Must match records</p>
  </div>

  <%= label_tag :dummy_country, "RECIPIENT'S REGISTERED ADDRESS", class: 'newrep1' %>
  <div class="newrep2">
    <p>Located in</p>
    <%= text_field_tag :country, @country, readonly: true %> 
  </div>
  <%= text_field_tag :registered_address, '', placeholder: 'Full Address', class: 'newrep2', onclick: "this.value=''" %>

  <%= label_tag :dummy_registered_address, "Remaining characters", class: 'newrep3' %>
  <%= text_field_tag :city_name, '', placeholder: "In The City Of", class: 'newrep2', onclick: "this.value=''" %>

  <input type="submit" value="NEXT" class="buttonsubmitred" />
<% end %>

</body>
