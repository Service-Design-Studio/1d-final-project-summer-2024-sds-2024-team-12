
<header>
  <%= link_to '<', back_button_path, class: 'back-button' %>
  <h1 class="paynow-header">Transaction History</h1>
</header>

<%# <div class="whitespace" style="background-color: #f1f2f4;"></div> %>

  <% @transactions.reverse_each do |transaction| %>
    <% transaction_date = transaction.created_at.to_date %>
    
    <% if @current_date != transaction_date %>
      <% @current_date = transaction_date %>
      <h2 class="transaction-date"><%= transaction_date.strftime("%a, %d %b %Y") %></h2>
    <% end %>
      <!-- Horizontal Line -->
      <hr style="border: 0; border-top: 1px solid #ccc; margin: 10px 10px 10px 0;"> <!-- Adjusted margin -->
    <div class="header1">
      <%= link_to transaction, style: "display: block; width: 100%;" do %>
      <%# <div class="header1"> %>
        <p class="transaction-name">Paynow to <%= transaction.name %></p>
        <div class="textcontainer1">
          <p class="sgdhistory">SGD</p>
          <p class="moneyhistory"><%= number_to_currency(transaction.amount, unit: "-", precision: 2) %></p>
        </div>
      <%# </div> %>
    <% end %>

    </div>
  <% end %>
</div>
