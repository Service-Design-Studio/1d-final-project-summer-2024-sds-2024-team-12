<!DOCTYPE html>
<html lang="en">
<head>
    <title>Pay & Transfer</title>
    <link rel="stylesheet" href="styles.css"> <!-- Ensure the CSS file is in the same directory -->
</head>
<body>
    <header>
        <div class="notification">11</div>
        <div class="search-bar">
            <input type="text" placeholder="Search for a recipient">
        </div>
    </header>

    <main>
        <section class="services">
            <div class="buttons-container">
                <div class="paynowbutton">
                    <%= link_to new_transaction_path do %>
                        <div class="iconButtonContainer">
                            <%= image_tag('paynow.png', alt: 'PayNow Image', class: 'iconImage') %>
                            <p class="iconButtonText">PayNow</p>
                        </div>
                    <% end %>
                </div>

                <div class="localbutton">
                    <div class="iconButtonContainer">
                        <%= image_tag('local.png', alt: 'Local Image', class: 'iconImage') %>
                        <p class="iconButtonText">Local</p>
                    </div>
                </div>
                <div class="exchangebutton">
                    <div class="iconButtonContainer">
                        <%= image_tag('exchange.png', alt: 'Exchange Image', class: 'exchangebutton') %>
                        <p class="iconButtonText">Exchange Currency</p>
                    </div>
                </div>
                <div class="overseasbutton">
                    <div class="iconButtonContainer">
                        <%= image_tag('overseas.png', alt: 'Overseas Image', class: 'overseasbutton') %>
                        <p class="iconButtonText">Overseas</p>
                    </div>
                </div>
                <div class="billsbutton">
                    <div class="iconButtonContainer">
                        <%= image_tag('bills.png', alt: 'Bills Image', class: 'billsbutton') %>
                        <p class="iconButtonText">Bills</p>
                    </div>
                </div>
                <div class="cardsbutton">
                    <div class="iconButtonContainer">
                        <%= image_tag('cards.png', alt: 'Cards Image', class: 'cardsbutton') %>
                        <p class="iconButtonText">Cards</p>
                    </div>
                </div>
                <div class="topupbutton">
                    <div class="iconButtonContainer">
                        <%= image_tag('topup.png', alt: 'Topup Image', class: 'topupbutton') %>
                        <p class="iconButtonText">Top up</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="recipients">
            <div class="tabs">
                <button class="tab active">Recent</button>
                <button class="tab">All</button>
                <button class="tab">Favourites</button>
            </div>
            <button class="add-recipient">Add Local Recipient</button>

            <div class="recipient">
                <div class="recipient-info">
                    <div class="avatar" style="background-color: #f9a825;">WB</div>
                    <div>
                        <p>WOORI BANK</p>
                        <span class="tag">DBS REMIT</span>
                    </div>
                </div>
                <button class="info-btn">i</button>
            </div>

            <div class="recipient">
                <div class="recipient-info">
                    <div class="avatar" style="background-color: #ff8a80;">LT</div>
                    <div>
                        <p>Recipient Name</p>
                    </div>
                </div>
                <button class="info-btn">i</button>
            </div>

            <div class="recipient">
                <div class="recipient-info">
                    <div class="avatar" style="background-color: #ba68c8;">KS</div>
                    <div>
                        <p>Recipient Name</p>
                    </div>
                </div>
                <button class="info-btn">i</button>
            </div>
        </section>
    </main>

    <footer>
        <div class="bottom-nav">
            <div class="bottomtabnavigatorcontainer">
                <a href="/transactions/index" class="transparent">
                    <img src="/assets/home_bottomfilled.png" alt="home" class="navicon">
                    <p class="navtextselected">Home</p>
                </a>
                <button class="transparent">
                    <img src="/assets/invest_bottom.png" alt="invest" class="navicon">
                    <p class="navtext">Invest</p>
                </button>
                <button class="transparent">
                    <img src="/assets/pay&transfer_bottom.png" alt="pay" class="navicon">
                    <p class="navtext">Pay & Transfer</p>
                </button>
                <button class="transparent">
                    <img src="/assets/plan_bottom.png" alt="plan" class="navicon">
                    <p class="navtext">Plan</p>
                </button>
                <button class="transparent">
                    <img src="/assets/more_bottom.png" alt="more" class="navicon">
                    <p class="navtext">More</p>
                </button>
            </div>
        </div>
    </footer>
</body>
</html>
